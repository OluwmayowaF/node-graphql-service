{
    "name": "graphql-service",
    "version": "1.0.0",
    "description": "A GraphQL API service built on nodejs with typescript ",
    "main": "dist/src/app.js",
    "scripts": {
        "build": "tsc",
        "build-ts": "tsc",
        "test": "env-cmd -f ./__test__/config/test.env jest --runInBand",
        "serve": "node dist/src/app.js",
        "start": "npm run serve",
        "dev": "nodemon src/app.ts --watch src --watch config",
        "prettier-format": "prettier --config .prettierrc 'src/*/**/*.{js,ts,tsx}' --write"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/OluwmayowaF/node-graphql-service.git"
    },
    "keywords": [
        "node",
        "grapql",
        "api",
        "typescript"
    ],
    "author": "Oluwamayowa Fadairo",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/OluwmayowaF/node-graphql-service/issues"
    },
    "homepage": "https://github.com/OluwmayowaF/node-graphql-service#readme",
    "dependencies": {
        "@google-cloud/firestore": "^5.0.2",
        "@graphql-tools/schema": "^8.3.13",
        "config": "^3.3.7",
        "dotenv": "^16.0.1",
        "express": "^4.18.1",
        "express-graphql": "^0.12.0",
        "firebase-admin": "^10.2.0",
        "graphql": "^16.5.0",
        "graphql-tools": "^8.2.11",
        "tslib": "^2.0.3",
        "uuid": "^8.3.2",
        "winston": "^3.7.2"
    },
    "devDependencies": {
        "@babel/register": "^7.17.7",
        "@types/config": "0.0.41",
        "@types/eslint": "^6.1.1",
        "@types/jest": "^28.1.0",
        "@types/mocha": "^9.1.1",
        "@types/uuid": "^8.3.4",
        "@typescript-eslint/eslint-plugin": "^2.3.1",
        "@typescript-eslint/parser": "^5.27.0",
        "apollo-boost": "^0.4.9",
        "cross-fetch": "^3.1.5",
        "eslint": "^7.29.0",
        "eslint-config-prettier": "~6.11.0",
        "eslint-plugin-jest": "~23.13.2",
        "eslint-plugin-prettier": "^3.3.1",
        "jest": "^28.1.0",
        "nodemon": "^2.0.16",
        "prettier": "~2.0.5",
        "ts-jest": "^28.0.4",
        "ts-node": "^10.8.1",
        "tsutils": "~3.17.0",
        "typescript": "^4.7.3"
    }
